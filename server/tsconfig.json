{
    "compilerOptions": {
        "target": "ES6",
        "module": "ES2020",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noEmitOnError": true,
        "sourceMap": true,
        "moduleResolution": "node" 
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}